<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.verse.app.contants.ListPagedItemType" />

        <variable
            name="viewModel"
            type="com.verse.app.ui.mypage.viewmodel.QNAViewModel" />

        <!--        <variable-->
        <!--            name="data"-->
        <!--            type="com.verse.app.model.mypage.GetInquiryCategoryListData" />-->

        <variable
            name="data"
            type="com.verse.app.model.common.SelectBoxData" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_30"
        android:layout_marginTop="@dimen/size_8"
        android:background="@color/white"
        tools:visibility="visible">

        <RelativeLayout
            android:id="@+id/rv_select_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_50"
            android:paddingStart="@dimen/size_20">

            <TextView
                android:id="@+id/qna_select_item"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/noto_sans_kr_light"
                android:includeFontPadding="false"
                android:lineSpacingExtra="32dp"
                android:singleLine="true"
                android:text="@{data.contents}"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/size_16"
                android:textStyle="normal"
                app:textViewTxtColor="@color/black"
                tools:text="의견보내기 카테고리1111" />

        </RelativeLayout>

    </RelativeLayout>


</layout>