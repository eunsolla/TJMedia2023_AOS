    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <!-- 커서-->
        <item name="android:textCursorDrawable">@drawable/yellow_cursor</item>

        <!-- 힌트 색-->
        <item name="android:textColorHint">@color/color_8c8c8c</item>

        <!-- 포커스 되어있지 않은 경우 밑줄 부분-->
        <item name="colorControlNormal">@android:color/transparent</item>

        <!-- 포커스시의 밑줄 부분-->
        <item name="colorControlActivated">@android:color/transparent</item>

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditSettingTextStyle" parent="Widget.AppCompat.EditText">
        <!-- 커서-->
        <item name="android:textCursorDrawable">@drawable/edit_cursor</item>

        <!-- 힌트 색-->
        <item name="android:textColorHint">@color/color_adadad</item>

